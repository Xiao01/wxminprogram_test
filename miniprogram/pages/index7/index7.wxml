<view style="margin:5px">
  <view style="justify-content:center;display:flex">
    <image src="xjq_wechat.jpg" style="width:120px;height:150px" animation="{{animation}}"></image>
  </view>
  <button style="margin-top:10px" bindtap="rotate">旋转</button>
  <button style="margin-top:5px" bindtap="scale">缩放</button>
  <button style="margin-top:5px" bindtap="translate">移动</button>
  <button style="margin-top:5px" bindtap="skew">倾斜</button>
  <button style="margin-top:5px" bindtap="rotateAndScale">旋转并缩放</button>
  <button style="margin-top:5px" bindtap="rotateThenScale">旋转然后缩放</button>
  <button style="margin-top:5px" bindtap="all">同时展示全部</button>
  <button style="margin-top:5px" bindtap="allInQueue">顺序展示全部</button>
  <button style="margin-top:5px" bindtap="reset">还原</button>
</view>